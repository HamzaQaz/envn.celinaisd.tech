<div
  class="modal fade"
  id="addModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="addModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="label">Add Device</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/admin/device/add" method="post">
  <div class="form-group">
    <label>Name</label>
    <input list="dev" type="text" class="form-control" name="name" required />
    <datalist id="dev">
      <% unknowndevices.forEach(dev => { %>
        <option value="<%= dev.NAME %>">MAC: <%= dev.MAC %> / IP: <%= dev.IP %></option>

        <% }); %>
    </datalist>

    <label>Campus (Shortcode)</label>
    <input list="locs" type="text" class="form-control" name="campus" required />
    <datalist id="locs">
      <% locations.forEach(loc => { %>
        <option value="<%= loc.SHORTCODE %>"><%= loc.NAME %></option>

        <% }); %>
    </datalist>


    <label>Location</label>
    <input list="loc" type="text" class="form-control" name="location" required />
    <datalist id="loc">
      <% locations.forEach(loc => { %>
        <option value="<%= loc.NAME %>"><%= loc.SHORTCODE %></option>

        <% }); %>
    </datalist>

    <label>Type</label>
    <input list="type" type="text" class="form-control" name="type" required />
    <datalist id="type">
      <option value="MDF">Main Distribution Frame</option>
      <option value="IDF">Intermediate Distribution Frame</option>

        
    </datalist>

    <label>Room</label>
    <input type="text" class="form-control" name="room" required />

    <button type="submit" class="btn btn-primary mt-3" style="float: right">
      Add
    </button>
  </div>
</form>
      </div>
    </div>
  </div>
</div>

